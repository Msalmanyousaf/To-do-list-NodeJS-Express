
<%- include("header") -%>
<!-- the above line includes the header.ejs file -->
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">

    <form action="/delete" method="post">
      <%  items.forEach(function(item){ %>
          <div class="item">
            <input type="checkbox" name="checkbox" onChange="this.form.submit()" value=<%= item._id %>>
            <p><%= item.name %></p>
          </div>
      <%  }); %>
      <input type="hidden" name="listTitle" value="<%= listTitle %>">
    </form>



    <form class="item" action="/" method="post">
      <input type="text" name="itemName" placeholder="New item" autocomplete="off" autofocus>
      <button type="submit" name="button" value="<%= listTitle %>"">+</button>

    </form>


  </div>
<%- include('footer'); -%>
